<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImage"
            android:src="@drawable/asset_4"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:id="@+id/recName"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Name"
            android:textColor="@color/yolveryesil"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recDistance"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="-7dp"
            android:layout_toEndOf="@id/recName"
            android:text="distance"
            android:textAlignment="center"
            android:textColor="@color/yolveryesil"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recPhone"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/recImage"
            android:maxLines="1"
            android:text="phone"
            android:textColor="@color/yolveryesil"
            android:textSize="14sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>